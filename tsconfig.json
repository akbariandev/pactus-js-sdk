{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "target": "ESNext",      // or "ES6" / "ES2015", depending on your target environment
    "module": "ESNext",      // This enables ES Module syntax
    "moduleResolution": "Node", // Use Node's module resolution strategy
    "outDir": "./dist",      // Specify the output directory for compiled files
    "rootDir": "./src",      // Specify the root directory of the source files
    "strict": true,          // Optional: Enable strict type checking options
    "esModuleInterop": true, // Optional: Enables emit interoperability between CommonJS and ES modules
    "skipLibCheck": true,    // Optional: Skips type checking of declaration files to speed up the build
    "forceConsistentCasingInFileNames": true // Optional: Disallow inconsistencies in file name casing
  },
  "include": [
    "src/**/*",
    "src/proto/gen/**/*"
  ],
  "exclude": ["node_modules"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}